@model StudentModel;

@using (Html.BeginForm("Save", "Student", FormMethod.Post))
{
    
    @Html.Label("Name:")
    @Html.TextBoxFor(x=>x.Name)
    <br />
    @Html.Label("Age:")
    @Html.TextBoxFor(x=>x.Age)
    <br/>
    <input type="Submit" value="Save" />
}
@Html.ActionLink("Show Students", "ShowStudent", "Student")